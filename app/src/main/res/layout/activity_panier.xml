<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Panier">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/textView40"
            android:layout_width="399dp"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGris"
            android:text=" Choisir d'autre produit.  "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />



        <ListView
            android:id="@+id/lv1"
            android:layout_width="402dp"
            android:layout_height="254dp"
            app:layout_constraintTop_toBottomOf="@+id/textView41"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/Ptotal"
            android:layout_width="387dp"
            android:layout_height="32dp"
            android:background="@color/colorRose"
            android:paddingStart="100dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:text="TOTAL PANIER :          "
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/lv1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/validerpanier"
            android:layout_width="387dp"
            android:layout_height="55dp"
            android:background="@color/colorDarkblue"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="VALIDER VOTRE COMMANDE          "
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ptotal"
            app:layout_constraintVertical_bias="0.0" />



        <TextView
            android:id="@+id/textView41"
            android:layout_width="383dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorWhite"
            android:text="   QTE    DESIGNATION      PU        PT        ACTION"
            android:textColor="@color/colorDarkblue"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView40"

            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>