<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListCatModifier"
    android:background="@color/colorWhite"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textView40"
            android:layout_width="399dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorDarkblue"
            android:text="\n LISTE DES CATEGORIES"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textlist"
            android:layout_width="383dp"
            android:layout_height="26dp"
            android:background="@color/colorWhite"
            android:text="   Nom(s) catÃ©gorie(s)                                  ACTION"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="-1dp"
            app:layout_constraintTop_toBottomOf="@+id/textView40"/>

        <ListView
            android:id="@+id/liste_cat"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/textlist"
            tools:layout_editor_absoluteX="0dp"/>


        <ImageView
            android:id="@+id/addCat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="65dp"
            android:paddingStart="10dp"
            android:src="@drawable/ic_add"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liste_cat" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>