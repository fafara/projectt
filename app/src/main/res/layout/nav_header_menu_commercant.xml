<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/main_header_selector"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/butterfly"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/butterfly" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNompos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Butterfly - Food and Drinks"
                android:textColor="#5C5A5A"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAdressepos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_placeholder"
                android:text="14 rue Ahmed Tlili Menzah 5 Ariana" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
